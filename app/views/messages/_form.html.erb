<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  

<div class="form-group">
  <label for="InputTipe" class="col-sm-2 control-label text-right">広告種別</label>
    <div class="col-sm-10">
      <%= f.text_field :tipe, id: "InputTipe", class: "form-control form_naco", placeholder: "tipe" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputMedia" class="col-sm-2 control-label text-right">媒体種別</label>
    <div class="col-sm-10">
      <%= f.text_field :media, id: "InputTipe", class: "form-control form_naco", placeholder: "media" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputStart" class="col-sm-2 control-label text-right">出稿開始日</label>
    <div class="col-sm-10">
      <%= f.text_field :start, id: "InputTipe", class: "form-control form_naco", placeholder: "start" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputFinish" class="col-sm-2 control-label text-right">出稿終了日</label>
    <div class="col-sm-10">
      <%= f.text_field :finish, id: "InputTipe", class: "form-control form_naco", placeholder: "finish" %>
    </div>
  </div>

  <div class="form-group">
  <label for="InputRink" class="col-sm-2 control-label text-right">リンク先URL</label>
    <div class="col-sm-10">
      <%= f.text_field :rink, id: "InputTipe", class: "form-control form_naco", placeholder: "rink" %>
    </div>
  </div>

  <div class="form-group sub_btn">
    <div class="col-sm-offset-6 col-sm-6">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>

